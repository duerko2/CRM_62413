@using BlazorApp.Services
@using RolesAndPermissions
@inject SideMenuService MenuService
@inject IUserAccessManager UserAccessManager;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorApp</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill nav-menu-icon" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">

        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" @onclick="MenuService.ToggleContactsMenu" href="/contacts">
                        <span class="bi bi-people-fill nav-menu-icon" aria-hidden="true"></span> Contacts
                    </NavLink>
                </div>

                @if (MenuService.IsContactsExpanded)
                {
                    <ul class="sub-menu">
                        <li class="nav-item px-3">
                            <NavLink class="nav-link" href="newcontact">
                                <span class="bi bi-person-plus-fill nav-menu-icon" aria-hidden="true"></span> New Contact
                            </NavLink>
                        </li>
                    </ul>
                }

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/campaigns">
                        <span class="bi bi-bar-chart-fill nav-menu-icon" aria-hidden="true"></span> Campaigns
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/newcampaign">
                        <span class="bi bi-bar-chart-fill nav-menu-icon" aria-hidden="true"></span> New campaign
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/pipelines">
                        <span class="bi bi-bar-chart-fill nav-menu-icon" aria-hidden="true"></span> Pipelines
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/newpipeline">
                        <span class="bi bi-bar-chart-fill nav-menu-icon" aria-hidden="true"></span> New pipeline
                    </NavLink>
                </div>
                @if(UserAccessManager.HasPermission(AuthenticationStateTask.Result.User, "EditCompany"))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/company-settings">
                            <span class="bi bi-person-fill nav-menu-icon" aria-hidden="true"></span> Company
                        </NavLink>
                    </div>
                }

            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code{
    [CascadingParameter] private Task<AuthenticationState> AuthenticationStateTask { get; set; }
}

<style>
    .sub-menu {
        padding-left: 20px; /* Reduce indentation */
        margin-top: -40px; /* Remove extra margin between parent and submenu */
        margin-bottom: -20px; /* Remove extra margin below submenus */
        list-style-type: none; /* Remove bullet points (optional) */
    }

    /* Adjust space between parent and submenu items */
    .nav-item {
        margin-bottom: 0px; /* Reduce space between main menu items */
    }

        .nav-item .nav-link {
            padding: 5px 0; /* Standard padding for parent menu items */
        }

    /* Less padding for sub-menu links */
    .sub-menu .nav-item {
        margin-bottom: -20px; /* Slight space between submenu items */
    }

        .sub-menu .nav-item .nav-link {
            padding: 3px 0; /* Less padding for submenu items */
            margin: 0; /* Ensure no extra margin for submenu items */
        }

    .nav-menu-icon {
        vertical-align: middle;
        margin-right: 5px; /* Adds some space between the icon and text */
        margin-left: 5px; /* Adds some space between the icon and text */
        font-size: 1.4em; /* Adjust the icon size to be proportionate */
        margin-top: -25px; /* Removes some space to get the icon in line with the menu item */
    }
</style>
